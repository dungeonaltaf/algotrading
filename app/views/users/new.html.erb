<% @page_title = "User Auth | Signup" %>
<div class = "Singup Form">
  <h1> Sign up Form </h1>
  <%= form_for(:user, :url=>{:controller => 'users', :action => 'create'}) do |f|%>
    <p> Username:</br> <%= f.text_field :username %> </p> 
    <p> Email:</br> <%= f.email_field :email %> </p>
    <p> Phone Number:</br> <%= f.telephone_field :phone_number %> </p>
    <p> Bank Account Number:<br> <%= f.text_field :account_no %> </p>
    <p> PAN Card Number:<br> <%= f.text_field :pan_no %> </p>
    <p> Password:</br> <%= f.password_field :password %> </p>
    <p> Confirm Password:</br> <%= f.password_field :password_confirmation %></p>
    <%= f.submit :Signup %>
  <% end %>
  <% if @user.errors.any? %>
    <ul class="Signup_Errors">
      <% for message_error in @user.errors.full_messages %>
        <li> <%= message_error %> </li>
      <% end %>
    </ul>
  <% end %>
</div>
